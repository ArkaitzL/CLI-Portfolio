---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-background-exterior text-text-primary min-h-screen flex flex-col items-center justify-center font-mono">
    <div
      id="console-container"
      class="h-[600px] w-11/12 lg:w-4/5 p-6 bg-background-interiror border border-accent-primary rounded-lg shadow-md"
    >
      <slot />
    </div>
  </body>
</html>


<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap');
  html {
    font-family: 'Inter', system-ui, sans-serif;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Courier New, monospace;
  }
</style>
