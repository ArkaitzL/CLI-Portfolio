  <!-- Botón para mostrar más -->
  <button
    id="toggle-button"
    class="mt-4 px-4 py-2 bg-background-interior text-text-primary font-mono border border-borde rounded-md hover:bg-background-exterior transition-colors"
  >
    Ver más
  </button>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const skillsList = document.getElementById('skills-list');
    const button = document.getElementById('toggle-button');

    button.addEventListener('click', () => {
      if (skillsList.classList.contains('max-h-12')) {
        skillsList.classList.remove('max-h-12');
        skillsList.classList.add('max-h-full');
        button.textContent = 'Ver menos';
      } else {
        // Eliminamos la transición temporalmente para hacerlo instantáneo
        skillsList.classList.remove('transition-[max-height]', 'duration-300');
        skillsList.classList.remove('max-h-full');
        skillsList.classList.add('max-h-12');
        button.textContent = 'Ver más';

        // Rehabilitamos la transición para futuras acciones
        setTimeout(() => {
          skillsList.classList.add('transition-[max-height]', 'duration-300');
        }, 0);
      }
    });
  });
</script>
