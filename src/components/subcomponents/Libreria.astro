---
const { titulo, resumen, plataforma, github, docLink } = Astro.props;
---

<div class="bg-background-interior p-4 border-b border-borde">
  <!-- Título -->
  <p class="font-semibold text-lg text-text-destacado">{titulo}</p>
  
  <!-- Plataforma -->
  <p class="text-sm text-destacado2 mt-1">Plataforma: <span class="font-medium">{plataforma}</span></p>
  
  <!-- Resumen -->
  <p class="text-sm text-text-secondary mt-2">{resumen}</p>
  
  <!-- Botones -->
  <div class="mt-4 flex flex-col md:flex-row md:justify-end md:space-x-4 space-y-4 md:space-y-0">
    <a href={github} target="_blank" class="text-text-enlace flex items-center">
      [🛠️ GitHub]
    </a>
    <a href={docLink} target="_blank" class="text-text-enlace flex items-center">
      [📄 Documentación]
    </a>
  </div>
</div>